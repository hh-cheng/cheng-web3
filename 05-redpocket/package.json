{
  "name": "05-redpocket",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "lint:style": "stylelint --fix \"./app/**/*.{css}\"",
    "lint:script": "eslint --ext .js,.jsx,.ts,.tsx --fix \"./app/**/*.{js,jsx,ts,tsx}\"",
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "contracts:compile": "cd contracts && npx --yes truffle compile",
    "contracts:migrate:sepolia": "cd contracts && npx --yes truffle migrate --network sepolia",
    "gen:contracts": "typechain --target=ethers-v6 'contracts/build/contracts/*.json'"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "await-to-js": "^3.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ethers": "^6.15.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@truffle/hdwallet-provider": "^2.1.15",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "commitlint": "^20.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^7.3.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-prettier": "^5.0.3",
    "tailwindcss": "^4",
    "truffle": "^5.11.5",
    "tw-animate-css": "^1.4.0",
    "typechain": "^8.3.2",
    "typescript": "^5"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts}": [
      "npm run lint:script",
      "git add ."
    ],
    "**/*.{css}": [
      "npm run lint:style",
      "git add ."
    ]
  }
}
